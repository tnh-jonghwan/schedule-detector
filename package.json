{
  "name": "medichis-schedule-detector",
  "version": "1.0.0",
  "description": "MySQL database batch processing for schedule detection",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx --watch src/index.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop medichis-schedule-detector",
    "pm2:restart": "pm2 restart medichis-schedule-detector",
    "pm2:delete": "pm2 delete medichis-schedule-detector",
    "pm2:logs": "pm2 logs medichis-schedule-detector",
    "pm2:monitor": "pm2 monit"
  },
  "keywords": [
    "mysql",
    "batch",
    "schedule",
    "detector"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/web-api": "^7.9.3",
    "dotenv": "^16.3.1",
    "mysql2": "^3.6.5",
    "node-cron": "^4.2.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@types/node-cron": "^3.0.11",
    "@types/xlsx": "^0.0.35",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
